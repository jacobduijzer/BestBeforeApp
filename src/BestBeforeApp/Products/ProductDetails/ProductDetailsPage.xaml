<?xml version="1.0" encoding="UTF-8"?>
<shared:BasePage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:shared="clr-namespace:BestBeforeApp.Shared"
             xmlns:i18n="clr-namespace:BestBeforeApp.Helpers"
             x:Class="BestBeforeApp.Products.ProductDetails.ProductDetailsPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="Edit" Order="Primary" Icon="Microsoft.png" Text="Edit" Priority="0" />
        <ToolbarItem Name="Delete" Command="{Binding DeleteProductCommand}" Order="Primary" Icon="Xamarin.png" Text="Delete" Priority="1" />
    </ContentPage.ToolbarItems>
    <ScrollView>
        <StackLayout Orientation="Vertical"
                        VerticalOptions="FillAndExpand"
                        Padding="10">
            <Label Text="{i18n:Translate ProductName}"
                    FontAttributes="Bold"
                    TextColor="Gray"
                    FontSize="16"
                    Padding="0, 30, 0, 0"/>
            <Entry TextColor="#535b69"
                    FontSize="24"
                    Keyboard="Text"
                    IsReadOnly="True"
                    Text="{Binding Product.Name}"/>

            <Label Text="{i18n:Translate BestBefore}"
                    FontAttributes="Bold"
                    TextColor="Gray"
                    FontSize="16"
                    Padding="0, 30, 0, 0"/>
            <Entry TextColor="#535b69"
                    FontSize="24"
                    Keyboard="Text"
                    IsReadOnly="True"
                    Text="{Binding Product.BestBefore}"/>

            <Label Text="{i18n:Translate ProductAmount}"
                    FontAttributes="Bold"
                    TextColor="Gray"
                    FontSize="16"
                    Padding="0, 30, 0, 0"/>
            <Entry TextColor="#535b69"
                    FontSize="24"
                    Keyboard="Text"
                    IsReadOnly="True"
                    Text="{Binding Product.Amount}"/>

            <Label Text="{i18n:Translate ProductImage}"
                    FontAttributes="Bold"
                    TextColor="Gray"
                    FontSize="16"/>

            <Image Source="{Binding ProductPhoto}" />

        </StackLayout>
    </ScrollView>
</shared:BasePage>
