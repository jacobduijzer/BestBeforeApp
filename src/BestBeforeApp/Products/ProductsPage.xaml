<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:i18n="clr-namespace:BestBeforeApp.Helpers"
             xmlns:converters="clr-namespace:BestBeforeApp.Helpers.Converters"
             x:Class="BestBeforeApp.Products.ProductsPage"
             Title="{i18n:Translate Products}">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:DateToColorConverter x:Key="dateToColorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout>
        <ListView x:Name="ItemsListView"
                  ItemsSource="{Binding Products}"
                  VerticalOptions="FillAndExpand"
                  HasUnevenRows="true"
                  RefreshCommand="{Binding LoadItemsCommand}"
                  IsPullToRefreshEnabled="true"
                  IsRefreshing="{Binding IsBusy, Mode=OneWay}"
                  CachingStrategy="RecycleElement"
                  >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="3, 0, 3, 0" BackgroundColor="{Binding BestBefore, Converter={StaticResource dateToColorConverter}}">
                            <StackLayout Padding="10" HorizontalOptions="FillAndExpand" BackgroundColor="White">
                                <StackLayout Orientation="Horizontal">
                                    <Label Text="{Binding Name}" LineBreakMode="NoWrap"
                                           Style="{DynamicResource ListItemTextStyle}"
                                           HorizontalOptions="FillAndExpand"
                                           FontSize="24" />
                                    <Label Text="{Binding Amount}"
                                           Style="{DynamicResource ListItemTextStyle}"
                                           VerticalTextAlignment="Center"
                                           VerticalOptions="Center"
                                           HorizontalOptions="End"
                                           FontSize="24" />
                                </StackLayout>
                                <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                                    <Label Text="{Binding BestBeforeHumanized}" Style="{DynamicResource ListItemDetailTextStyle}" FontSize="13" HorizontalOptions="FillAndExpand"/>
                                    <Label Text="{Binding BestBefore, StringFormat='{0:dd-MM-yyyy}'}" Style="{DynamicResource ListItemDetailTextStyle}" FontSize="13" HorizontalOptions="End"/>
                                </StackLayout>
                            </StackLayout>
                        </StackLayout>
                        
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
